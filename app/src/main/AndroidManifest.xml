<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sticko.app">

    <uses-permission android:name="android.permission.NFC" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher_sticko_app_circle"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_sticko_app_circle_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.StickoApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".SettingsScreen.TutorialScreens.TutorialsScreens"
            android:label="@string/title_activity_tutorials_screens"
            android:theme="@style/Theme.StickoApp.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivationScreen.ActivationActivity">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="ext"
                    android:pathPrefix="/peterjohnwelcome.com:nfcapp"
                    android:scheme="vnd.android.nfc" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Connections.Connections"
            android:label="@string/title_activity_connections"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StickoApp.NoActionBar" />
        <activity
            android:name=".Connections.InfoMessageActivity"
            android:label="@string/title_activity_connections"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StickoApp.NoActionBar" />
        <activity
            android:name=".FollowsTapScreen.Follows"
            android:label="@string/title_activity_follows"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.StickoApp.NoActionBar" />
        <activity
            android:name=".OnboardingScreen.OnboardingScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UserHomeScreen.UserHomeScreen"
            android:screenOrientation="portrait">
            <meta-data
                android:name="sticko.app.UserHomeScreen"
                android:resource="@layout/activity_user_home_screen" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
                <data
                    android:host="profile.sticko.fr"
                    android:pathPrefix="/"
                    android:scheme="http" />
                <!-- note that the leading "/" is required for pathPrefix -->
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
                <data
                    android:host="profile.sticko.fr"
                    android:scheme="https" />
                <!-- note that the leading "/" is required for pathPrefix -->
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreen.HomeScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsScreen.contactor_sticko.ContactUsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize"/>
        <activity
            android:name=".VerificationsScreen.VerificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UpdatePassword.UpdatePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotPassword.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Registrations.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginScreen.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Connections.AddLinksActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

    </application>

</manifest>