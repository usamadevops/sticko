<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="start">

        <TextView
            android:id="@+id/serial_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/d_din_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            android:textSize="19sp"
            android:textColor="@color/white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_dp"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/serial_no"
            android:maxWidth="45dp"
            android:layout_marginStart="15dp"
            android:maxHeight="45dp"
            android:minWidth="45dp"
            android:minHeight="45dp"
            android:src="@drawable/profile_icon" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/ll_sticks_view"
            android:layout_toEndOf="@+id/user_dp"
            android:ellipsize="end"
            android:ems="10"
            android:fontFamily="@font/d_din_bold"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/ll_sticks_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_background_disable"
            android:gravity="center_vertical"
            android:minWidth="130dp"
            android:minHeight="30dp"
            android:paddingStart="20dp"
            android:paddingEnd="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/trophy_icon" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/d_din_condensed_bold"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:text="@string/score"
                android:textAllCaps="true"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>