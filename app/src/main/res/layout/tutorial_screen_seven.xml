<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_secondary" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar">

        <LinearLayout
            android:id="@+id/tap_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/d_din"
                android:gravity="center"
                android:text="Nouveaux liens"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/d_din"
                android:gravity="center"
                android:text="Liens actifs"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tap_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_below="@+id/tap_layout"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/hint_color" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_below="@+id/tap_layout"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/secondary_color" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_connections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_line"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <include layout="@layout/tutorial_seven_mini_screen"></include>

            <include layout="@layout/tutorial_seven_mini_screen"></include>

            <include layout="@layout/tutorial_seven_mini_screen"></include>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_connections"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_eye_grey" />
            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/d_din_condensed_bold"
                android:text="@string/hide_profile_link"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:theme="@style/text_style" />

            <ImageView
                android:id="@+id/iv_logo2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_remove" />

            <TextView
                android:id="@+id/tv_top_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/d_din_condensed_bold"
                android:text="@string/delete_profile_link"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:theme="@style/text_style" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>