<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="@dimen/margin_top_30"
        android:layout_marginEnd="10dp"
        android:minHeight="44dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_toStartOf="@+id/ib_delete"
            android:background="@drawable/edt_background_custom">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_new_pass"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edt_background_custom"
                android:paddingStart="20dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/icon_tin_color"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_social_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edt_background_custom"
                    android:ellipsize="none"
                    android:ems="3"
                    android:fontFamily="@font/d_din"
                    android:hint=""
                    android:inputType="text"
                    android:paddingStart="@dimen/edt_padding_start"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="#ECECEC"
                    android:textCursorDrawable="@drawable/cursor_color" />

            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/ib_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_toStartOf="@+id/ib_info"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_remove" />

        <ImageButton
            android:id="@+id/ib_info"
            android:layout_width="24dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_info_help" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/active_icons" />
</RelativeLayout>