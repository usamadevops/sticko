<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_container"
    android:background="@color/primary_color"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_activation_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="100dp"
            android:layout_marginHorizontal="45dp"
            android:background="@drawable/activation_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:fontFamily="@font/d_din_condensed_bold"
                    android:text="@string/heading_activate_sticko"
                    android:textAllCaps="true"
                    android:justificationMode="inter_word"
                    android:textSize="25sp"
                    android:theme="@style/text_style" />

                <TextView
                    android:id="@+id/tv_top_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/activation_instructions"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:justificationMode="inter_word"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_activate_sticko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/button_background"
                    android:minHeight="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="@string/activate_sticko"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/txt_screen_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:theme="@style/text_style_tutorials"
        android:text="@string/screen_three_text" />
</RelativeLayout>