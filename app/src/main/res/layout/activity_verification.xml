<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".LoginScreen.LoginActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_icon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_back"
        android:scrollbarThumbVertical="@null">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:layout_marginEnd="@dimen/margin_end"
            android:focusable="true">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:src="@drawable/verification_icon" />

            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_logo"
                android:layout_marginTop="18dp"
                android:text="@string/verification_text"
                android:theme="@style/heading_text_style" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_heading"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/d_din"
                android:gravity="center"
                android:text="@string/verification_description"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size"
                android:textColor="@color/hint_color" />

            <RelativeLayout
                android:id="@+id/rl_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:layout_below="@+id/tv_description"
                android:layout_marginTop="@dimen/margin_top_50"
                android:gravity="center"
                android:focusable="true">

                <EditText
                    android:id="@+id/code_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginTop="@dimen/margin_edt_fields_top"
                    android:layout_marginEnd="10dp"
                    android:autofillHints=""
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:minWidth="30dp"
                    android:background="@drawable/background_verfication"
                    android:inputType="number"
                   />

                <EditText
                    android:id="@+id/code_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginTop="@dimen/margin_edt_fields_top"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/code_1"
                    android:autofillHints=""
                    android:maxLength="1"
                    android:background="@drawable/background_verfication"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:minWidth="30dp" />

                <EditText
                    android:id="@+id/code_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginTop="@dimen/margin_edt_fields_top"
                    android:layout_marginEnd="10dp"
                    android:maxLength="1"
                    android:layout_toEndOf="@+id/code_2"
                    android:background="@drawable/background_verfication"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:minWidth="30dp" />

                <EditText
                    android:id="@+id/code_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginTop="@dimen/margin_edt_fields_top"
                    android:layout_marginEnd="15dp"
                    android:maxLength="1"
                    android:layout_toEndOf="@+id/code_3"
                    android:background="@drawable/background_verfication"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:minWidth="30dp" />

                <EditText
                    android:id="@+id/code_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:layout_marginTop="@dimen/margin_edt_fields_top"
                    android:layout_marginEnd="20dp"
                    android:maxLength="1"
                    android:layout_toEndOf="@+id/code_4"
                    android:background="@drawable/background_verfication"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:minWidth="30dp" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_verification_code"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_background"
                android:text="@string/verifier"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:theme="@style/button_style" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>