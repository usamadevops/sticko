<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary_color"
    android:layout_height="match_parent"
    android:id="@+id/main_container"
    tools:context=".SettingsScreen.DeactivatedAlertFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_secondary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/alert_icon" />

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:fontFamily="@font/d_din"
        android:textSize="17sp"
        android:lineSpacingExtra="7dp"
        android:layout_marginTop="@dimen/margin_edt_fields_top"
        android:text="@string/deactivate_account_alert"
        />
    </RelativeLayout>
</RelativeLayout>