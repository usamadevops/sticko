<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:clickable="true"
    tools:context=".QRCodeSection.QR_codeFragment"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_close_24" />
    <ImageView
        android:id="@+id/QR_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/qr_code_icon"
        android:background="@color/white"
        android:layout_below="@+id/btn_close"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/user_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/QR_code"/>
        <LinearLayout
            android:id="@+id/ll_share_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_background_disable"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/margin_top_50"
            android:layout_below="@+id/user_url"
            android:minHeight="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_baseline_share_24" />
            <TextView
                android:id="@+id/add_qr_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_profile_link"
                android:textSize="18sp"
                android:fontFamily="@font/d_din_bold"
                android:gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_add_qr_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_background_disable"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ll_share_profile"
            android:minHeight="50dp"
            android:visibility="gone">

<!--            <ImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginEnd="15dp"-->
<!--                android:src="@drawable/ic_baseline_share_24" />-->
            <TextView
                android:id="@+id/share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_qr_wallet"
                android:textSize="18sp"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/d_din_bold"
                android:gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/sticko_logo_bottom"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>