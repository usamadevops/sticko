<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".Following.FollowingFragment">
<include
    layout="@layout/app_bar_secondary"
    android:id="@+id/app_bar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/app_bar"
    android:layout_marginEnd="50dp"
    android:layout_marginStart="50dp">
    <ImageView
        android:id="@+id/iv_following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_description"
        android:src="@drawable/following_icon" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_50"
        android:fontFamily="@font/d_din"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/have_not_followed"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size"
        android:textColor="@color/hint_color" />
</RelativeLayout>

</RelativeLayout>