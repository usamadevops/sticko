<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".UserHomeScreen.UserHomeScreen">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_fields"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_background"
            android:minWidth="150dp"
            android:minHeight="150dp"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="17dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar6" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_profile"
            android:layout_marginTop="20dp"
            android:text="LÃ‰A"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:theme="@style/heading_text_style" />

        <TextView
            android:id="@+id/tv_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/margin_edt_fields_top"
            android:fontFamily="@font/d_din"
            android:gravity="center"
            android:text="Graphic designer"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bio"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background_follow"
            android:fontFamily="@font/d_din_condensed_bold"
            android:gravity="center"
            android:minHeight="33dp"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:text="@string/follow"
            android:textAllCaps="true"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/text_size"
            android:theme="@style/button_style" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_homeScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/txt_heading"
            android:layout_below="@+id/btn_following"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/screen_eight_text"
            android:theme="@style/text_style_tutorials" />

    </RelativeLayout>


</RelativeLayout>
